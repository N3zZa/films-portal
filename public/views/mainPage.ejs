<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html
    PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta http-equiv="Content-Type" content="text/html; Charset=UTF-8" />
    <title>Main page</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/keyboard.css" />

    <script type="text/javascript" src="libs/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="libs/lodash.compat.min.js"></script>
    <script type="text/javascript" src="libs/event_emitter.js"></script>
    <script type="text/javascript" src="js/lib/smartbox.js"></script>
    <script>
        // запуск навигации
        $(function () {
            $$nav.on()
        })
    </script>
</head>
<style>
    body {
        overflow-x: hidden;
    }

    body,
    h1,
    h2,
    p,
    div {
        padding: 0;
        margin: 0;
        font-family: 'Roboto', sans-serif;
        color: rgb(110, 197, 255);
    }

    .bg {
        position: fixed;
        top: 0;
        width: 100%;
        height: 100%;
        background: url(/img/bg.jpg) no-repeat;
        z-index: -10;
    }

    .wrap {
        max-width: 1440px;
        margin: 0 auto;
    }

    .header {
        max-width: 1440px;
        margin: 0 auto;
        display: fixed;
        position: relative;
        padding: 15px;
        height: 40px;
        background: rgb(73, 73, 73);
    }

    .header h2 {
        float: left;
    }

    .header_images {
        float: right;
    }

    .header .focus {
        border: 5px solid yellow;
        margin: -5px
    }

    .search_block {
        display: inline-block;
        margin-right: 25px;
    }

    .filmText {
        display: none;
    }

    main {
        padding-top: 20px;
        width: 100%;
    }

    main h1 {
        margin: 20px 0 20px 0;
    }

    main .nav-item {
        border: 5px solid transparent
    }

    #channelsSlider .focus {
        border: 5px solid yellow;
    }

    .slider {
        overflow-x: scroll;
        white-space: nowrap;
        margin-bottom: 20px;
    }

    #channelsSlider {
        overflow-x: auto;
        white-space: nowrap;
    }

    main h1 {
        color: white;
    }

    .premieresSlider {
        max-height: 300px;
    }

    .slider::-webkit-scrollbar-thumb {
        background: none;
    }

    .slider::-webkit-scrollbar-track {
        /* фон */
        background: none;
    }

    .slider::-webkit-scrollbar {
        /* фон */
        width: 0;
        height: 0;
        background: none;
    }

    .text {
        white-space: wrap;
        color: #fff;
    }

    .text h1 {
        max-width: 100%;
        font-size: 18px;
        margin: 0;
    }

    .filmsItemText {
        position: absolute;
    }

    .filmsItemText h1 {
        white-space: wrap;
        font-size: 13px;
    }

    .premieresSlider .premieresText {
        display: none;
        position: absolute;
        left: 5px;
        bottom: 10px;
    }

    .focus .premieresText {
        display: block;
    }

    .premieresSlider .focus .filmText {
        display: none;
        position: absolute;
        left: 5px;
        bottom: 10px;
    }

    .item {
        position: relative;
        display: inline-block;
        margin: 0;
    }

    .premieresItem {
        margin-right: 10px;
        width: 500px;
        height: 300px;
    }

    .filmsItem {
        height: 260px;
        width: 150px;
        margin-right: 10px;
    }

    .filmsItemBg {
        width: 100%;
        height: 200px;
    }

    .fullHdFilmsBtn {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
    }

    .cartoonsItem {
        height: 260px;
        width: 150px;
        margin-right: 10px;
    }

    .serialItem {
        height: 260px;
        width: 150px;
        margin-right: 10px;
    }

    .slider .focus {
        border: 5px solid yellow;
    }

    .channel {
        width: 250px;
        height: 125px;
        display: inline-block;
        position: relative;
    }

    .channel .channelName {
        display: none;
    }

    .focus .channelName {
        display: block;
        position: absolute;
        bottom: 5px;
        left: 5px;
        color: white;
    }

    .fullhdItem {
        border: 5px solid transparent;
        width: 220px;
    }
      .progress_bar-empty {
        position: relative;
        display: inline-block;
        width: 100%;
        border-bottom: 5px solid gray;
        z-index: 10;
        margin: 0 auto;
    }

    .progress_bar {
        position: absolute;
        width: 0%;
        height: 100%;
        border-bottom: 5px solid yellow;
    }

    .progress_bar-empty p {
        width: 300px;
        margin: 0 auto;
    }

    .adviceClickDown {
        position: absolute;
        width: 100%;
        top: -25px;
    }

    .playerMenu {
        padding: 10px 0 0 0;
        width: 100%;
        position: fixed;
        bottom: 0;
        height: 35px;
        z-index: 15;
    }

    .playerMenu p {
        color: white;
        display: inline-block;
        font-family: 'Roboto', sans-serif;
        font-weight: bold;
    }
    .playerTime {
        display: inline-block;
        white-space: nowrap;
        width: 100px;
        text-align: center;
        top: 0;
    }
    

    .adviceClickDown div {
        width: 35px;
        margin: 0 auto;
    }
    .adviceClickDown img {
        width: 35px;
        height: 35px;
        z-index: 15;
    }

    .playerMenu__inner {
        position: relative;
        width: 80%;
        margin: 0 auto;
    }

    .muteBlock {
        display: none;
        float: left;
        margin-right: 30px;
    }
    
    .muteImg {
        color: white;
        width: 100px;
        height: 100px;
    }

    .soundPopup {
        float: left;
        width: 50px;
        text-align: center;
        padding: 10px;
        border-radius: 20px;
    }

    .soundPopup p {
        color: white;
        font-size: 32px;
        font-weight: bold;
    }

    .soundPopup span {
        font-size: 40px;
        color: yellow;
    }
    .soundPopup img {
        width: 40px;
        height: 40px;
    }

    .current_time {
        position: absolute;
        left: 25px;
    }
    .full_time {
        position: absolute;
        right: 25px;
    }
    .barCicle {
        position: absolute;
        right: -7px;
        background: yellow;
        border-radius: 50%;
        width: 10px;
        height: 10px;
        top: -3px;
    }
    
    .popups_block {
        position: absolute;
        top: 100px;
        right: 100px;
        z-index: 10;
    }
    .pause_block {
        position: absolute;
        width: 100%;
        top: 50%;
    }
    .pause_block img {
        display: none;
        width: 70px;
        height: 70px;
    }
    .pause_block-inner {
        width: 70px;
        height: 70px;
        margin: 0 auto;
    }
</style>

<body>
    <div class="bg"></div>
<div class="popups_block">
    <div id="mute" class="muteBlock">
        <img class="muteImg" src="/img/mute.svg" alt="mute">
    </div>
    <div class="soundPopup" id="soundPopup">
        <img src="/img/Vol.svg" alt="volume">
        <div class="volume">
            <p id="volume">0</p>
        </div>
    </div>
</div>
<div class="playerMenu" id="playerMenu">
    <div class="playerTime current_time">
        <p id="currentTime">1:00:00</p>
    </div>
    <div class="adviceClickDown">
        <div>
            <img width="35" height="35" src="/img/downArrow.svg" alt="downArrow">
        </div>
    </div>
    <div class="playerMenu__inner">
        <div id="progressBarEmpty" class="progress_bar-empty">
            <div id="progressBar" class="progress_bar">
                <div class="barCicle"></div>
            </div>
        </div>
    </div>
    <div class="playerTime full_time">
        <p id="fullTime">1:50:00</p>
    </div>
</div>
<div class="pause_block">
    <div class="pause_block-inner">
        <img id="play" src="/img/play.svg" alt="play">
        <img id="pause" src="/img/pause.svg" alt="pause">
    </div>
</div>
    <header class="header">
        <h2>13:00</h2>
        <div class="header_images navigation-items">
            <a href="/search" class="search_block">
                <img id="search" class="search nav-item" src="/img/search.svg" alt="search"
                    data-nav_ud="0,0,#premiere0,0">
            </a>
            <img class="nav-item" src="/img/profile.svg" alt="profile" data-nav_ud="0,0,#premiere0,0">
        </div>
    </header>
    <div class="wrap">
        <main data-nav_type="hbox">
            <div id="filmsSlider" class="slider premieresSlider navigation-items" data-nav_type="hbox">
                <!-- с помощью шаблонизатора импортирую html разметку -->
                <%- include('./elements/premieres.ejs') %>
            </div>
            <h1>Премьеры</h1>
            <div id="premieresSlider" class="slider navigation-items" data-nav_type="hbox">
                <div class="filmsItem item fullhdItem">
                    <div id="filmFullHd" class="fullHdFilmsBtn nav-item"
                        style="background: url('https://avatars.mds.yandex.net/i?id=2a00000189b813f4607406e9ae19ac6c8180-1714228-fast-images&n=13'); background-repeat:no-repeat;background-size: 100% 100%;">
                    </div>
                </div>
                <!-- с помощью шаблонизатора импортирую html разметку -->
                <%- include('./elements/films.ejs') %>
            </div>
            <h1>Телеканалы</h1>
            <div class="slider" id="channelsSlider" data-nav_type="hbox">
                <%- include('./elements/channels/channelImages.ejs') %>
            </div>
            <h1>Мульфильмы</h1>
            <div id="cartoonsSlider" class="slider navigation-items" data-nav_type="hbox">
                <!-- с помощью шаблонизатора импортирую html разметку -->
                <%- include('./elements/cartoons.ejs') %>
            </div>
            <h1>Сериалы</h1>
            <div id="serialsSlider" class="slider navigation-items" data-nav_type="hbox">
                <!-- с помощью шаблонизатора импортирую html разметку -->
                <%- include('./elements/serials.ejs') %>
            </div>
        </main>
    </div>
    
    <script type="text/javascript">
       
        $('#channel125').after('<br/>');
        var isShow = false;
        // код нажатия на клавиши
        $(document).keydown(function (e) {
            console.log(e.keyCode)
            var curItemPos = $('.focus')
            $('.focus').get(0).scrollIntoView(); // скроллить к элементу 
            if (e.keyCode === 13) {
                console.log('click')
            }
        });
        $('#filmFullHd').click(function () {
            window.location = '/fullHdFilms'
        })
    </script>
</body>

</html>