<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html
    PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta http-equiv="Content-Type" content="text/html; Charset=UTF-8" />
    <title>Main page</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/keyboard.css" />

    <script type="text/javascript" src="libs/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="libs/lodash.compat.min.js"></script>
    <script type="text/javascript" src="libs/event_emitter.js"></script>
    <script type="text/javascript" src="js/lib/smartbox.js"></script>
    <script>
        // запуск навигации
        $(function () {
            $$nav.on()
        })
    </script>
</head>
<style>
    body {
        overflow-x: hidden;
    }

    body,
    h1,
    h2,
    p,
    div {
        padding: 0;
        margin: 0;
        font-family: 'Roboto', sans-serif;
        color: rgb(110, 197, 255);
    }

    .bg {
        position: fixed;
        top: 0;
        width: 100%;
        height: 100%;
        background: url(/img/bg.jpg) no-repeat;
        z-index: -10;
    }

    .wrap {
        max-width: 1440px;
        margin: 0 auto;
    }

    .header {
        max-width: 1440px;
        margin: 0 auto;
        display: fixed;
        position: relative;
        padding: 15px;
        height: 40px;
        background: rgb(73, 73, 73);
    }

    .header h2 {
        float: left;
    }

    .header_images {
        float: right;
    }

    .header .focus {
        border: 5px solid yellow;
        margin: -5px
    }

    .search_block {
        display: inline-block;
        margin-right: 25px;
    }

    .filmText {
        display: none;
    }

    main {
        padding-top: 20px;
        width: 100%;
    }

    main h1 {
        margin: 20px 0 20px 0;
    }

    main .nav-item {
        border: 5px solid transparent
    }

    #channelsSlider .focus {
        border: 5px solid yellow;
    }

    .slider {
        overflow-x: scroll;
        white-space: nowrap;
        margin-bottom: 20px;
    }

    #channelsSlider {
        overflow-x: auto;
        white-space: nowrap;
    }

    main h1 {
        color: white;
    }

    .premieresSlider {
        max-height: 300px;
    }

    .slider::-webkit-scrollbar-thumb {
        background: none;
    }

    .slider::-webkit-scrollbar-track {
        /* фон */
        background: none;
    }

    .slider::-webkit-scrollbar {
        /* фон */
        width: 0;
        height: 0;
        background: none;
    }

    .text {
        white-space: wrap;
        color: #fff;
    }

    .text h1 {
        max-width: 100%;
        font-size: 18px;
        margin: 0;
    }

    .filmsItemText {
        position: absolute;
    }

    .filmsItemText h1 {
        white-space: wrap;
        font-size: 13px;
    }

    .premieresSlider .premieresText {
        display: none;
        position: absolute;
        left: 5px;
        bottom: 10px;
    }

    .focus .premieresText {
        display: block;
    }

    .premieresSlider .focus .filmText {
        display: none;
        position: absolute;
        left: 5px;
        bottom: 10px;
    }

    .item {
        position: relative;
        display: inline-block;
        margin: 0;
    }

    .premieresItem {
        margin-right: 10px;
        width: 500px;
        height: 300px;
    }

    .filmsItem {
        height: 260px;
        width: 150px;
        margin-right: 10px;
    }

    .filmsItemBg {
        width: 100%;
        height: 200px;
    }

    .fullHdFilmsBtn {
        position: absolute;
        top: 0;
        width: 100%;
        height: 100%;
    }

    .cartoonsItem {
        height: 260px;
        width: 150px;
        margin-right: 10px;
    }

    .serialItem {
        height: 260px;
        width: 150px;
        margin-right: 10px;
    }

    .slider .focus {
        border: 5px solid yellow;
    }

    .channel {
        width: 250px;
        height: 125px;
        display: inline-block;
        position: relative;
    }

    .channel .channelName {
        display: none;
    }

    .focus .channelName {
        display: block;
        position: absolute;
        bottom: 5px;
        left: 5px;
        color: white;
    }

    .fullhdItem {
        border: 5px solid transparent;
        width: 220px;
    }
</style>

<body>
    <div class="bg"></div>

    <header class="header">
        <h2>13:00</h2>
        <div class="header_images navigation-items">
            <a href="/search" class="search_block">
                <img id="search" class="search nav-item" src="/img/search.svg" alt="search"
                    data-nav_ud="0,0,#premiere0,0">
            </a>
            <img class="nav-item" src="/img/profile.svg" alt="profile" data-nav_ud="0,0,#premiere0,0">
        </div>
    </header>
    <div class="wrap">
        <main data-nav_type="hbox">
           
        </main>
    </div>

    <script type="text/javascript">
        // код нажатия на клавиши
        $(document).keydown(function (e) {
            console.log(e.keyCode)
            var curItemPos = $('.focus')
            $('.focus').get(0).scrollIntoView(); // скроллить к элементу 
        });
        $('#filmFullHd').click(function () {
            window.location = '/fullHdFilms'
        })
    </script>
</body>

</html>